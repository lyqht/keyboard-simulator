---
import { Icon } from 'astro-icon';
import GameArea from '../components/GameArea.tsx'
let title = 'Keyboard';
---
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <title>{title}</title>
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    
    <link rel="stylesheet" href={Astro.resolve('../styles/global.css')}>
    <link rel="stylesheet" href={Astro.resolve('../styles/home.css')}>
    <link rel="stylesheet" href={Astro.resolve('../styles/keyboard.css')}>
    <link rel="stylesheet" href={Astro.resolve('../styles/game.css')}>

    <style>
        header {
            display: flex;
            flex-direction: column;
            justify-content: center;
            gap: 1em;
        }

        [astro-icon] {
            height: 72px;
            width: 72px;
        }
    </style>
</head>
<body>
    <main>
        <header>
            <div>
                <Icon name="keyboard" />
                <h1>Keyboard Simulator</h1>
            </div>
        </header>
    </main>

    <GameArea client:visible />

</body>
</html>
